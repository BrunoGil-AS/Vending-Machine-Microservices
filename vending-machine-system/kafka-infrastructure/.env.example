# Example environment variables for Vending Machine Kafka Infrastructure
# Copy this file to .env and customize as needed

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_AUTO_CREATE_TOPICS=true
KAFKA_DELETE_TOPIC_ENABLE=true
KAFKA_LOG_RETENTION_HOURS=168

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka UI Configuration
KAFKA_UI_PORT=9090
KAFKA_CLUSTERS_0_NAME=vending-machine-cluster
KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS=localhost:9092

# Network Configuration
KAFKA_NETWORK_NAME=vending-kafka-network

# Container Names (for management scripts)
ZOOKEEPER_CONTAINER_NAME=vending-zookeeper
KAFKA_CONTAINER_NAME=vending-kafka
KAFKA_UI_CONTAINER_NAME=vending-kafka-ui

# Topic Configuration for Vending Machine
TRANSACTION_TOPIC_PARTITIONS=1
PAYMENT_TOPIC_PARTITIONS=1
INVENTORY_TOPIC_PARTITIONS=1
DISPENSING_TOPIC_PARTITIONS=1
NOTIFICATION_TOPIC_PARTITIONS=1
TOPIC_REPLICATION_FACTOR=1

# Performance Settings
KAFKA_HEAP_OPTS=-Xmx1G -Xms1G
KAFKA_JVM_PERFORMANCE_OPTS=-server -XX:+UseG1GC -XX:MaxGCPauseMillis=20

# Logging
KAFKA_LOG_LEVEL=INFO
KAFKA_ROOT_LOG_LEVEL=INFO